{
  "id":"elasticsearch-logstash",
  "kind":"ReplicationController",
  "apiVersion":"v1beta1",
  "desiredState":{
    "replicas":1,
    "replicaSelector":{
      "component":"elasticsearch",
      "role":"elasticsearch-logstash"
    },
    "podTemplate":{
      "desiredState":{
        "manifest":{
          "version":"v1beta1",
          "id":"elasticsearch-logstash",
          "containers":[
            {
              "name":"elasticsearch-logstash",
              "image":"pires/kubernetes-elk-cluster:el-latest",
              "ports":[
                {
                  "name":"lumberjack",
                  "containerPort":5043
                },
                {
                  "name":"es-transport",
                  "containerPort":9300
                }
              ],
              "volumeMounts":[
                {
                  "name":"storage",
                  "mountPath":"/data"
                }
              ]
            }
          ],
          "volumes":[
            {
              "name":"storage",
              "source":{
                "emptyDir":{

                }
              }
            }
          ]
        }
      },
      "labels":{
        "component":"elasticsearch",
        "role":"elasticsearch-logstash"
      }
    }
  }
}