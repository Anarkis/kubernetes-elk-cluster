{
  "id":"kibana",
  "kind":"ReplicationController",
  "apiVersion":"v1beta1",
  "desiredState":{
    "replicas":1,
    "replicaSelector":{
      "component":"elasticsearch",
      "role":"kibana"
    },
    "podTemplate":{
      "desiredState":{
        "manifest":{
          "version":"v1beta1",
          "id":"kibana",
          "containers":[
            {
              "name":"elasticsearch",
              "image":"pires/elasticsearch:lb",
              "ports":[
                {
                  "name":"http",
                  "containerPort":9200
                },
                {
                  "name":"transport",
                  "containerPort":9300
                }
              ],
              "volumeMounts":[
                {
                  "name":"storage",
                  "mountPath":"/data"
                }
              ]
            },
            {
              "name":"kibana",
              "image":"bobrik/kibana4",
              "ports":[
                {
                  "name":"kibana",
                  "containerPort":5601
                }
              ]
            }
          ],
          "volumes":[
            {
              "name":"storage",
              "source":{
                "emptyDir":{

                }
              }
            }
          ]
        }
      },
      "labels":{
        "component":"elasticsearch",
        "role":"kibana"
      }
    }
  }
}
