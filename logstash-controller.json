{
  "id":"logstash",
  "kind":"ReplicationController",
  "apiVersion":"v1beta1",
  "desiredState":{
    "replicas":1,
    "replicaSelector":{
      "component":"elasticsearch",
      "role":"logstash"
    },
    "podTemplate":{
      "desiredState":{
        "manifest":{
          "version":"v1beta1",
          "id":"logstash",
          "containers":[
            {
              "name":"elasticsearch",
              "image":"pires/elasticsearch:lb",
              "ports":[
                {
                  "name":"transport",
                  "containerPort":9300
                }
              ],
              "volumeMounts":[
                {
                  "name":"storage",
                  "mountPath":"/data"
                }
              ]
            },
            {
              "name":"logstash",
              "image":"pires/docker-logstash",
              "ports":[
                {
                  "name":"lumberjack",
                  "containerPort":5043
                }
              ],
              "volumeMounts":[
                {
                  "name":"certs",
                  "mountPath":"/logstash/certs"
                }
              ]
            }
          ],
          "volumes":[
            {
              "name":"storage",
              "source":{
                "emptyDir":{ }
              }
            },
            {
              "name":"certs",
              "source":{
                "hostDir":{
                  "path": "/path/to/certificates"
                }
              }
            }
          ]
        }
      },
      "labels":{
        "component":"elasticsearch",
        "role":"logstash"
      }
    }
  }
}
