{
  "id":"logstash-forwarder",
  "kind":"ReplicationController",
  "apiVersion":"v1beta1",
  "desiredState":{
    "replicas":1,
    "replicaSelector":{
      "component":"logstash-forwarder"
    },
    "podTemplate":{
      "desiredState":{
        "manifest":{
          "version":"v1beta1",
          "id":"logstash-forwarder",
          "containers":[
            {
              "name":"logstash-forwarder",
              "image":"pires/logstash-forwarder",
              "volumeMounts":[
                {
                  "name":"certs",
                  "mountPath":"/certs"
                }
              ]
            }
          ],
          "volumes":[
            {
              "name":"certs",
              "source":{
                "hostDir":{
                  "path": "/path/to/certificates"
                }
              }
            }
          ]
        }
      },
      "labels":{
        "component":"logstash-forwarder"
      }
    }
  }
}